
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(uuid())
  name         String?
  email        String   @unique
  passwordHash String
  role         UserRole @default(Student)
  created_at   DateTime @default(now())
  predictions  Prediction[]
}

model Prediction {
  id         String   @id @default(uuid())
  user_id    String
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  label      String
  confidence Float
  imageId    String
  created_at DateTime @default(now())
}

enum UserRole {
  Student
  Faculty
  HOD
  Admin
  Advisor
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Student {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique
  department      String?
  rollNumber      String?  @unique
  registerNumber  String?  @unique
  classId         String?
  imageUrl        String?
  mobileNumber    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Faculty {
  id           String    @id @default(uuid())
  name         String
  email        String    @unique
  passwordHash String
  role         String // Admin, HOD, Faculty, Advisor
  department   String?
  imageUrl     String?
  classId      String? // For advisors
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  predictions  Prediction[]
}

model Image {
  id        String       @id @default(uuid())
  filePath  String
  userId    String
  user      Faculty      @relation(fields: [userId], references: [id])
  createdAt DateTime     @default(now())
  Prediction Prediction?
}

model Prediction {
  id         String   @id @default(uuid())
  imageId    String   @unique
  image      Image    @relation(fields: [imageId], references: [id])
  label      String
  confidence Float
  user_id    String
  user       Faculty    @relation(fields: [user_id], references: [id])
  created_at DateTime @default(now())
}
